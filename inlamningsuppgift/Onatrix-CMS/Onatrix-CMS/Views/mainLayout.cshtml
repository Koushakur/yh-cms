@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;

    var pTitle = !string.IsNullOrEmpty(ViewBag.Title) ? $"Onatrix | {ViewBag.Title}" : "Onatrix";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>@pTitle</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet">
    <!---->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/3900daea88.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="css/style.css">
    <script defer src="/scripts/scripts.js"></script>
</head>

<body>
    <header>
        <section class="header-top">
            <div class="container">
                <div>Klarabergsviadukten 90, 111 64 Stockholm</div>
                <div class="socials">
                    <a href="https://www.facebook.com" target="_blank"><span class="fa-brands fa-facebook-f"></span></a>
                    <a href="https://www.twitter.com" target="_blank"><span class="fa-brands fa-twitter"></span></a>
                    <a href="https://www.linkedin.com" target="_blank"><span class="fa-brands fa-linkedin"></span></a>
                </div>
            </div>
        </section>

        <section class="header-bottom">
            <div class="container">
                <img src="/logos/logo_onatrix.svg" alt="">
                <nav>
                    <a href="/about">About</a>
                    <a href="/services">Services</a>
                    <a href="/projects">Projects</a>
                    <a href="/contact">Contact</a>
                </nav>
                <span class="fa-solid fa-magnifying-glass"></span>
            </div>
        </section>
    </header>

    <main>
        @RenderBody();
    </main>

    <footer>
        <div class="container">
            © Onatrix. All Rights Reserved. Credits to <a href="http://www.google.com">Themesflat</a>
        </div>
    </footer>
</body>
</html>
